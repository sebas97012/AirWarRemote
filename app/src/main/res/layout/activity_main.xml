<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/welcome_background"
    tools:context="ce.itcr.com.airwarremote.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/ip_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert computer's IP"
        android:inputType="text"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/editText"
        android:layout_toStartOf="@+id/connect_button"
        android:layout_marginEnd="11dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/awr"
        android:visibility="visible"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/ip_entry"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#000000"
        android:ems="10"
        android:inputType="none"
        android:text="Version 1.0"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_ok"
        android:onClick="connect"
        android:visibility="visible"
        android:layout_alignBottom="@+id/ip_entry"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="130dp" />

</RelativeLayout>
